{
    "version": "1.0.0-ISK",
    "layout_type": "QUADRANT_SYSTEM",
    "zones": {
        "A": {
            "id": "navigator_zone",
            "label": "Navegador de Capas",
            "position": "left",
            "min_width": "250px",
            "default_width": "300px",
            "resizable": true
        },
        "B": {
            "id": "stage_zone",
            "label": "Escenario Espacial",
            "position": "center",
            "flex": 1,
            "resizable": false
        },
        "C": {
            "id": "inspector_zone",
            "label": "Inspector de Propiedades",
            "position": "right",
            "min_width": "300px",
            "default_width": "350px",
            "resizable": true
        },
        "D": {
            "id": "hud_zone",
            "label": "HUD de Estado",
            "position": "bottom",
            "height": "60px",
            "resizable": false
        }
    },
    "slots": {
        "navigator_zone": "semantic_data_cube",
        "stage_zone": "spatial_canvas",
        "inspector_zone": "visual_inspector",
        "hud_zone": "state_hud"
    },
    "constraints": {
        "min_viewport_width": "1024px",
        "min_viewport_height": "768px",
        "panel_resize_snap": "10px"
    }
}