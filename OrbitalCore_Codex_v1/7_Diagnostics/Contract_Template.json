{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Orbital Core Contract Template v5.5",
    "type": "object",
    "required": [
        "node_id",
        "semantic_intent",
        "io_interface",
        "behavior"
    ],
    "properties": {
        "node_id": {
            "type": "string",
            "description": "Unique identifier for the node."
        },
        "semantic_intent": {
            "type": "string",
            "enum": [
                "VAULT",
                "GATE",
                "STREAM",
                "BRIDGE",
                "INHIBIT",
                "TRIGGER",
                "SCHEMA",
                "PROBE",
                "TRANSFORM",
                "OBSERVER"
            ]
        },
        "io_interface": {
            "type": "object",
            "required": [
                "inputs",
                "outputs"
            ],
            "properties": {
                "inputs": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "required": [
                            "role",
                            "type",
                            "description"
                        ],
                        "properties": {
                            "role": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string",
                                "minLength": 5
                            }
                        }
                    }
                },
                "outputs": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "required": [
                            "role",
                            "type",
                            "description"
                        ],
                        "properties": {
                            "role": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string",
                                "minLength": 5
                            }
                        }
                    }
                }
            }
        },
        "behavior": {
            "type": "object",
            "properties": {
                "energy": {
                    "type": "string"
                },
                "frequency": {
                    "type": "string"
                }
            }
        },
        "payload_schema_ref": {
            "type": "string"
        }
    }
}